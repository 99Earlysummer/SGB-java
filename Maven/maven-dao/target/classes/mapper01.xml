<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test1">


    <select id="selectExamById" parameterType="int" resultType="pojo.Exam">
        select *
        from t_user
        where user_id = #{userId}
    </select>


    <!--添加exam-->
    <insert id="addExam" parameterType="com.atguigu.com.atguigu.pojo.Exam">
        insert into t_user
        values (null, #{userName}, #{userPwd}, #{emsil})
    </insert>

    <!--删除exam-->
    <delete id="deleteExamById" parameterType="int">
        delete
        from t_user
        where userId = #{id}
    </delete>

    <!--修改exam-->
    <update id="updateExamById" parameterType="com.atguigu.pojo.Exam">
        update t_user
        set userId    = #{name},
                userNane= #{math},
            userPwd= #{english},
            email = #{chinese}
        where userId = #{id}
    </update>


</mapper>