<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.meinian.mapper.OrderSettingMapper">

    <!-- 查询天数记录数   int getCountByOrderDate(Date orderDate);-->
    <select id="getCountByOrderDate" resultType="int">
        select count(*)
        from t_ordersetting
        where orderDate = #{orderDate}
    </select>
    <!--  更新人数  void updateNumberByOrderDate(OrderSetting orderSetting);-->
    <update id="updateNumberByOrderDate">
        update t_ordersetting
        set number = #{number}
        where orderDate = #{orderDate}
    </update>
    <!-- 新增   void addOrderSetting(OrderSetting orderSetting);-->
    <insert id="addOrderSetting">
        insert into t_ordersetting
        values (
                null, #{orderDate}, #{number}, 0
                )
    </insert>

    <!--
String startDate=orderDate+"-1";//年月-1
String endDate=orderDate+"-31";//年月-31  就是一个月从1号 到  31号的日期
-->
    <!--List<OrderSetting> getOrderSettingByMonth(@Param("startDate") String startDate, @Param("endDate") String endDate);-->
    <select id="getOrderSettingByMonth" resultType="OrderSetting">
        select *
        from t_ordersetting
        where orderDate between #{startDate} and #{endDate}
    </select>

</mapper>
